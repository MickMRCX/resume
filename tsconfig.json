{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "newLine": "LF",
    "charset": "utf8",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "pretty": true
  },
  "exclude": [
    "node_modules", "dist", "temp", "output", "log", "test-data", "app-assets"
  ]
}